		<% } %>

	</div>


	<div style="float: right">
		<% if(session_username == null) { %>
			<a href="${pageContext.request.contextPath}/Login">Login</a> 
		<% } %>
		
		<% if(session_username != null) { %>
			<a href="${pageContext.request.contextPath}">Logout</a>
		<% } %>
	</div>
</div>

